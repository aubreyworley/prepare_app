<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for @checkin do |f| %>
    <div class="form-group">
      <label for="text">New Check-In</label>
      <%= f.text_field :first_name, placeholder: "First Name", autofocus: true, class: "form-control" %>
      <%= f.text_field :last_name, placeholder: "Last Name", autofocus: true, class: "form-control" %>
      <%= f.text_area :status, placeholder: "Enter safe, missing, in danger etc.", autofocus: true, class: "form-control" %>
    </div>
    <%= f.submit class: "btn btn-dark btn-block" %>
    <% end %>
  </div>
</div>