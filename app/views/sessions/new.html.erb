
<div class="col-md-4"></div>
<div class="col-md-4">
  <h3> Login </h3>
  <hr>
 <%= form_for :user, url: sessions_path, :html => {:id => "login-form"} do |f| %>

  <div class="form-group">

    <%= f.email_field :email, placeholder: "Email", autofocus: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, placeholder: "Password", autofocus: true, class: "form-control" %>
  </div>
    <%= f.submit "Log In", class: "btn btn-primary" %>
  <% end %>
  <br>
<p>Don't have an account? <%= link_to "Click here", signup_path%> to sign up.</p>
<div class="col-md-4"></div>
</div>